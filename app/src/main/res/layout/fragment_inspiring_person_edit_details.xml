<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_editInspiringPerson_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Edit an inspiring person"
        android:textAlignment="center"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_editInspiringPerson_name_input"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_editInspiringPerson_header">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_editInspiringPerson_name_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Enter name" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_editInspiringPerson_date_input"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_editInspiringPerson_name_input">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_editInspiringPerson_date_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Enter birth and death date" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_editInspiringPerson_details_input"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_editInspiringPerson_date_input">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_editInspiringPerson_details_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Enter details about the person"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:scrollbars="vertical" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_editInspiringPerson_url_input"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_editInspiringPerson_details_input">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_editInspiringPerson_url_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter image url"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:scrollbars="vertical" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_editInspiringPerson_firstQuote_input"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_editInspiringPerson_url_input">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_editInspiringPerson_firstQuote_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter first quote"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:scrollbars="vertical" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_editInspiringPerson_secondQuote_input"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_editInspiringPerson_firstQuote_input">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_editInspiringPerson_secondQuote_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter second quote"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:scrollbars="vertical" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_save_changes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:backgroundTint="@color/black"
        android:text="Save changes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_editInspiringPerson_secondQuote_input" />


</androidx.constraintlayout.widget.ConstraintLayout>